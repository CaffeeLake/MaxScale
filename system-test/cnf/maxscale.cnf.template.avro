[maxscale]
threads=###threads###
log_info=1

###server###

[MySQL-Monitor]
type=monitor
module=mysqlmon
servers=###server_line###
user=maxskysql
password=skysql
monitor_interval=2000

[avro-converter]
type=service
router=avrorouter
start_index=1
group_trx=1
group_rows=1
avrodir=/var/lib/maxscale/avro/
user=skysql
password=skysql
servers=server1

[avro-listener]
type=listener
service=avro-converter
protocol=CDC
port=4001
authenticator=CDCPlainAuth
